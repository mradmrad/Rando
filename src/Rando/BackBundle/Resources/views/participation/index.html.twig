{% extends '@RandoBack/layout.html.twig' %}

{% block backoffice_body %}
    <h1>Participations list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Etat</th>
                <th>Dateconfirmation</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for participation in participations %}
            <tr>
                <td><a href="{{ path('participation_show', { 'id': participation.id }) }}">{{ participation.id }}</a></td>
                <td>{% if participation.etat %}Yes{% else %}No{% endif %}</td>
                <td>{% if participation.dateConfirmation %}{{ participation.dateConfirmation|date('Y-m-d') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('participation_show', { 'id': participation.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('participation_edit', { 'id': participation.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('participation_new') }}">Create a new participation</a>
        </li>
    </ul>
{% endblock %}
