{% extends '@RandoBack/layout.html.twig' %}

{% block backoffice_body %}
    <h1>Participation</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ participation.id }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{% if participation.etat %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Dateconfirmation</th>
                <td>{% if participation.dateConfirmation %}{{ participation.dateConfirmation|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('participation_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('participation_edit', { 'id': participation.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
