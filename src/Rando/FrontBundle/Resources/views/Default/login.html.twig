{% extends '@RandoFront/layout.html.twig' %}
{% block title %}
    <title>
        Acceuil Rando-vous
    </title>
{% endblock %}

{% block frontoffice_body %}
    <body class="login" style="background-image: url('assets/img/home_img/mountain.jpg');">
    <div class="pre-loader">
        <div class="loading-img"></div>
    </div>

    <div class="main">
        <div class="form-box">
            <div class="form-head">
                <div class="mold-logo">
                    <div class="mold">Mold</div>
                    <div class="logo"></div>
                    <div class="logo-txt">Discover</div>
                </div>
                <hr>
                <div class="txt">Please Login</div>
            </div>
            <div class="form-body">
                <form>
                    <div class="form-group">
                        <label>User Name</label>
                        <div class="input-group">
                            <div class="input-group-addon icon-mail"></div>
                            <input type="text" class="form-control" placeholder="User Name"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <div class="input-group">
                            <div class="input-group-addon icon-lock"></div>
                            <input type="password" class="form-control" placeholder="Password"/>
                        </div>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox"> Remember me
                        </label>
                    </div>
                    <button type="submit" class="btn btn-primary hvr-sweep-to-right">Log In</button>
                </form>
            </div>
        </div>
    </div>
    </body>
{% endblock %}