{% extends '@RandoFront/layout.html.twig' %}
{% block title %}
    <title>
        Acceuil Rando-vous
    </title>
{% endblock %}

{% block frontoffice_body %}
    <section class="">
        <div class="container">

            <div class="main-title">
                <h1>Profile</h1>
            </div>

            <div class="row">
                <div class="col-sm-5">
                    <form>
                        <div class="form-group">
                            <label>Nom</label>
                            <input type="text" class="form-control" placeholder="Nom">
                        </div>
                        <div class="form-group">
                            <label>Prenom</label>
                            <input type="text" class="form-control" placeholder="Prenom">
                        </div>
                        <div class="form-group">
                            <label>Email address</label>
                            <input type="email" class="form-control" placeholder="Email">
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" class="form-control" placeholder="Password">
                        </div>

                        <button type="submit" class="btn btn-primary gt-underline-from-left">Modifier</button>
                    </form>
                </div>

                <div class="col-sm-5 col-sm-offset-1">
                    <br/>

                    <button href="#" class="btn btn-primary gt-underline-from-left">Modifier mon mot de passe </button>
                </div>
            </div>
        </div>
        <div class="main-title">
            <h1></h1>
        </div>
    </section>
{% endblock %}